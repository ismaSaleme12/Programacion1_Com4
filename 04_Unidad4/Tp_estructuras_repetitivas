#EJERCICIO 7
print(" ")
print("Ejercicio 7")

suma_numeros = 0
num = int(input("Ingrese un numero entero positivo: "))

for num_bucle in range(1,num):
    suma_numeros += num_bucle


print(f"la suma de los numeros comprendidos entre 0 y {num} es de: {suma_numeros}")



#---------------------------------------------------------

#EJERCICIO 8
print(" ")
print("Ejercicio 8")

num_pares = 0
num_impares = 0
num_positivos = 0
num_negativos = 0

for numeros in range(1, 11):
    num = int(input(f"ingrese el numero {numeros}: "))

    if num % 2 == 0:
        num_pares += 1
    else:
        num_impares += 1

    if num > 0:
        num_positivos += 1
    else:
        num_negativos += 1


print(" ")
print("------------------------------")
print(f"|Numero pares: {num_pares}")
print(f"|Numero impares: {num_impares} ")
print(f"|Numero positivos: {num_positivos}")
print(f"|Numero negativos: {num_negativos}")


#---------------------------------------------------------

#EJERCICIO 9
print(" ")
print("Ejercicio 9")

cantidad = 100
media = float(0)
suma_numeros = 0

for i in range(cantidad):
    num = int(input(f"Ingrese el numero {i+1}: "))
    suma_numeros += num

media = suma_numeros/cantidad

print(" ")
print(f"La media de los numeros ingresados es de: {media}")


#---------------------------------------------------------


#EJERCICIO 10
print(" ")
print("Ejercicio 10")

num_invertido = 0
num = int(input("Ingresa un numero: "))
original = num

while num != 0:
    digito = num % 10 
    num_invertido = num_invertido * 10 + digito
    num //= 10


print(" ")
print(f"numero normal: {original}")
print(f"numero invertido: {num_invertido}")
