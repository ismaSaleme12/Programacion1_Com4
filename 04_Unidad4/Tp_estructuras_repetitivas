#EJERCICIO 2
print(" ")
print("Ejercicio 2")

num = int(input("ingrese un numero entero: "))
digitos = 0

if num == 0:
    digitos = 1
else:
    while num != 0:
        num //= 10
        digitos += 1

print(" ")
print(f"Cantidad de digitos: {digitos} ")

#---------------------------------------------------------

#EJERCICIO 3
print(" ")
print("Ejercicio 3")

num1 = int(input("Ingrese el primer numero entero: "))

num2 = int(input("Ingrese el segundo numero entero: "))

suma_numeros = 0

#CAMBIAR EL VALOR DE LA VARIABLE A OTRA
#POR SI EL USUARIO INGRESA PRIMERO UN NUMERO MAYOR
if num1 > num2:
    aux = num2
    num2 = num1
    num1 = aux


for numeros in range(num1 + 1, num2):
    suma_numeros += numeros

print(" ")
print(f"La suma de los numero enteros comprendidos entre {num1} y {num2} es de: {suma_numeros}")

