#EJERCICIO 4
print(" ")
print("Ejercicio 4")

salir = 1
suma_numero = 0

while salir != 0:
    print(" ")
    num = int(input("-Ingrese un numero: "))
    suma_numero += num
    salir = int(input("Â¿Desea salir? ingrese (0), de lo contrario, ingrese otro numero: "))

print(" ")
print("----------------------------------------------")
print(f"La suma total de los numeros ingresados es de: {suma_numero}")


#---------------------------------------------------------
#EJERCICIO 5
print(" ")
print("Ejercicio 5")

import random
intentos = 1

print("ADIVINA EL NUMERO")

num_aleatorio = random.randint(0,9)
num = int(input("Ingresa el numero: "))

while num != num_aleatorio:
    intentos += 1
    num = int(input("Ingresa el numero: "))

print(" ")
print("FELICITACIONES!, adivinaste el numero")
print(f"Te tomo: {intentos} intentos")


